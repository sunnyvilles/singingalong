<!DOCTYPE html>
<html>
	<head>
		<title>The Other Song ADMIN</title>

		<meta charset="utf-8">
		<%= stylesheet_link_tag "application" %>
		<%= stylesheet_link_tag "admin" %>
		<%= javascript_include_tag 'application' %>
		<%= csrf_meta_tags %>

		<link rel="stylesheet" type="text/css" href="/styles/jquery.ui.all.css"></link>
		<link rel="stylesheet" type="text/css" href="/styles/jquery.tagit.css"></link>
		<link rel="stylesheet" type="text/css" href="/styles/tagit.ui-zendesk.css"></link>
		

	</head>
	<body>
		<%=render :partial=> "home/shared/menu"%>
		<div style="width: 980px; margin: auto;">			
			<div class="admin-secondHeader">
				<span>
					<input type="radio" name="section" <%= @section != "academy" and @section != "clinic" ? "checked" : "" %>/>
					<label>None</label>					
				</span>
				<span>
					<input type="radio" name="section" <%= @section == "academy" ? "checked" : "" %> value="academy"/>
					<label>Academy</label>					
				</span>

				<span>
					<input type="radio" name="section"  <%= @section == "clinic" ? "checked" : "" %> value="clinic"/>
					<label>Clinic</label>					
				</span>
			</div>
			<%if @section.present?%>

				<ul class="admin-tabs dottebBottom">
					<li class="admin-tab <%= @type == "article" ? "selected" : "" %>">
						<a href="/admin/<%=@section%>/articles">
							<span>Articles</span>
						</a>
					</li>
					<li class="admin-tab <%= @type == "video" ? "selected" : "" %>">
						<a href="/admin/<%=@section%>/videos">
							<span>Videos</span>
						</a>
					</li>
					<li class="admin-tab <%= @type == "case study" ? "selected" : "" %>">
						<a href="/admin/<%=@section%>/case-studies">
							<span>Case Studies</span>
						</a>
					</li>
					<% if @section === "clinic" %>
					<li class="admin-tab <%= params[:controller] == "admin/events" ? "selected" : "" %>">
						<a href="/admin/<%=@section%>/events">
							<span>Events</span>
						</a>
					</li>
					<%else%>
					<li class="admin-tab <%= params[:controller] == "admin/courses" ? "selected" : "" %>">
						<a href="/admin/<%=@section%>/courses">
							<span>Courses</span>
						</a>
					</li>
					<%end%>
					<li class="admin-tab <%= params[:controller] == "admin/doctors" ? "selected" : "" %>">
						<a href="/admin/<%=@section%>/doctors">
							<span>Team</span>
						</a>
					</li>
				</ul>

			<%end%>
			<div class="adminCt">
				<%= yield %>
			</div>
		</div>
		<script>
			$("input[type=radio]").click(function(){
				var section = $(this).val();
				if(section === "clinic" || section === "academy"){
					window.location = "/admin/" + section + "/articles";
				}else{
					window.location = "/admin/";
				}
				
			})
			/*$(function() {
				$( ".tabs" ).tabs();
			});*/
		</script>
		<!--<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>-->
	</body>
</html>
