<style>
	a, a:hover{
		color: #fff;
	}
	.outer_table {
		width:980px;

	}
tr {
	display: block;
	
}
	td {
		display:inline-block;
		width:295px;
		height:200px;		
		padding:15px 15px 0px 11px;
		border-right:1px dashed lightgrey;
		
		
	}
	
	.tdContent {
		padding:6px 6px 0px 6px;
		margin-bottom: 6px;
		border: 1px solid grey;
		display: table;
		width: 100%;
		height: 100%;		
	table-layout:fixed;
  		
	 	box-sizing: border-box;       /*	  Opera/IE 8+ */
		-webkit-box-sizing: border-box;  /*  Safari/Chrome, other WebKit */
   		-moz-box-sizing: border-box;    /*  Firefox, other Gecko */
   

	}
	.doc_img {

		vertical-align:top;
     	display: table-cell;
     	margin-right: 5px;
     	
		
	}
	.tdText {

		display: table-cell;

	}
</style>
<% col = 0 %>
<table class="outer_table">
  	<% @doctors.each do |doctor| %>
			<%if col%3 == 0%>
				<tr>
			<%end%>

		<td>
			<div class="tdContent">
			<div class="doc_img"><img src="/images/doctors/<%=doctor.id%>.jpg" width="80"></img></div>
			<div class="tdText">
			Name:  <%= doctor.name %><br/>
			Title: <%= doctor.title %><br/>
			Urls:  <% doctor.urls.each do |url| %>
						<%=url.title%>,
					<%end%>
			
					<p>&nbsp</p>
			Description: <br/><%= doctor.description %><br/>
		
			<%= link_to 'Edit', "/admin/#{@section}/doctors/#{doctor.id}/edit" %><br/>
			<%= link_to 'Delete', [:admin, doctor], confirm: 'Are you sure?', method: :delete %>
			</div>
			</div>
		</td>
			
			<% col = col + 1 %>
			<%if col%3 == 0%>
				</tr>
			<%end%>
		
	<% end %>
</table>

<br />
<div class="actions">
	<a href="/admin/academy/doctors/new"><input type="button" value="New Team Member"/></a>
</div>

