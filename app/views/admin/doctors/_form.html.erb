<%= form_for([:admin, @doctor]) do |f| %>
	<% if @doctor.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

			<ul>
				<% @doctor.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.select :title, [["",0],["Consultancy/ Faculty", 1],
			["Sr. Resident Doctors", 2],
			["Resident Doctors", 3],
			["Curriculum", 4],
			["Marketing and PR (Academy)", 5],
			["Accreditation and Resources", 6],
			["Publication", 7],
			["Marketing and PR (Clinic)", 8],
			["Visiting", 9]] %>
	</div>
	<div class="field">
		<label for="doctor_urls[]">URL</label><br />
		<input type="text" name="doctor_urls[]"></input>		
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
	<div class="field">
				<%= f.label :picture, 'upload a picture' %><br />
				<%= f.file_field :picture %>
				<img src="/images/doctors/<%=@doctor[:id]%>.jpg" height="80" width="60"></img>
			</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>