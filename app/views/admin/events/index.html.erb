<h1>Listing events</h1>
<div class="articleList">
	<table>
		<tr>
			<th>Name</th>
			<th>Date</th>
			<th>Description</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>

		<% @events.each do |event| %>
			<tr>
				<td><%= event.title %></td>
				<td><%= event.day %></td>
				<!--<%= link_to '', [:admin, event] %>-->				
				<td><%= event.description[0..100] unless event.description.blank?%></td>
				<td><%= link_to 'Edit', "/admin/#{@section}/events/#{event.id}/edit" %></td>
				<td><%= link_to 'Delete', [:admin, event], confirm: 'Are you sure?', method: :delete %></td>
			</tr>
		<% end %>
	</table>
</div>



