<style type="text/css">

table td{

	text-align:center;
	vertical-align:center;
}

</style>
<%= render :partial => "/admin/shared/header" %>
<%= render :partial => "/admin/shared/tabs" %>
<div class="articleList">
	 <div class="upperbar">
		<h2 class="floatLeft">Events Dashboard</h2>
		<div class="page floatRight">
			<ul></ul>
		</div>
		<%= button_to 'New Event', "/admin/#{@section}/events/new" ,:class=>"btn btn_newArticle floatRight",:method => :get %>
		<div style="clear:both"></div>

	</div>
	<table>
		<tr>
			<th>Name</th>
			<th>Date</th>
			<th>Description</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>

		<% @events.each do |event| %>
			<tr>
				<td><%= event.title %></td>
				<td><%= event.day %></td>
				<!--<%= link_to '', [:admin, event] %>-->
				<td><%= event.description[0..100] unless event.description.blank?%></td>
				<td><a href=<%="/admin/#{@section}/events/#{event.id}/edit"%>><span class="adminSprite editIcon"></span></a><!--<%= link_to 'Edit', "/admin/#{@section}/events/#{event.id}/edit" %>--></td>
				<td><a href="/admin/clinic/events/<%=event.id%>" data-confirm="Are you sure?" data-method="delete" rel="nofollow"><span class="adminSprite crossIcon"></span></a><!--<%= link_to 'Delete', [:admin, event], confirm: 'Are you sure?', method: :delete %>--></td>
			</tr>
		<% end %>
	</table>
</div>


