
<style type="text/css">

.new_article
{margin-left:25px;}
</style>
<%= form_for([:admin, @article]) do |f| %>


  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div  class="field source_select">
    <%= f.label :source %><br />
  <%= f.select :source,["clinic", "academy"] ,:selected => '1'%>

  </div>
  <div  class="field type_select">
    <%= f.label :type %><br />
  <%= f.select :type,["article","video", "case study"] ,:selected => '1'%>

  </div>
  <div class="field content_text">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>

  <div class="field content_text">
    <%= f.label :uploadedfile, 'upload a picture' %><br />
    <%= f.file_field :uploadedfile %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<script type="text/javascript">
$(document).ready(function() {
$(".content_url").css({
      display: 'none'
    });
}

);

</script>