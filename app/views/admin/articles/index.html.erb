
<h1>Listing articles</h1>

<table style="margin:auto;">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.name %></td>
    <td><%= article.title %></td>
    <td><%= article.content %></td>

    <td><%= link_to 'Edit', edit_admin_article_path(article),:style=>"color:red;" %></td>
    <td><%= link_to 'Show', [:admin,article],:style=>"color:red;" %></td>
    <td><%= link_to 'Destroy',[:admin,article], confirm: 'Are you sure?', method: :delete ,:style=>"color:red;"%></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Article', new_admin_article_path ,:style=>"color:blue;"%>
