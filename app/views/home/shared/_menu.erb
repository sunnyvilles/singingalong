<style>
	@font-face {
		font-family: 'texgyreadventorbold';
		font-style: normal;
		font-weight: 400;
		src: local('texgyreadventorbold'),url('/fonts/Maven_Pro_Regular.otf'); /* IE9 Compat Modes */
	}
	body{
		font-family: texgyreadventorbold;
		margin: 0;
	}
	.header{
		height: 60px;
		border-top: 1px solid #525355;
		background-image: -moz-linear-gradient(center top,#424242,#787878);
		background-image: -webkit-linear-gradient(#424242,#787878);
		background-color: #454648;
		-moz-box-shadow: 0 1px 3px rgba(0,0,0,.3);
		-webkit-box-shadow: 0 1px 3px rgba(0,0,0,.3);
		box-shadow: 0 1px 3px rgba(0,0,0,.3);
	}
	.headerCt{
		width: 980px;
		margin: auto;
	}
	.headerCt .menuItems li.selected{
		background-color: #424242;
	}
	.headerCt .menuItems li{
		display: inline;
		color: white;
	}
	.headerCt .menuItems li.item:hover{
		background-color: #424242;
	}
	.headerCt .menuItems li.item{
		padding: 20px;
		height: 20px;
		font-size: 20px;
		display: inline-block;
	}
	.tosLogo{
		display: inline-block;
		height: 56px;
		width: 267px;
		background-position: -508px -36px;
	}

	.contentWrap{
		min-height: 400px;
		width: 980px;
		margin: auto;
	}
	.loginBox{
		display: inline-block;
		padding: 10px;
		background-image: url("/images/sprite.png");
		background-position: -244px -10px;
		cursor: pointer;
		position: relative;
		margin-left: 22px;
	}
	.loginText{
		padding-right: 3px;
		position: relative;
		bottom: 2px;
	}

	.downArrow{
		width: 16px;
		height: 16px;
		background-position: -128px -28px;
		position: relative;
		bottom: 2px;
	}
	.search{
		height: 26px;
		width: 212px;
		position: relative;
		bottom: 5px;
		background-color: #bdbdbd;
		border: none;
		position: relative;
		left: 25px;
	}
	.searchIcon{
		height: 24px;
		width: 24px;
		background-position: -152px -19px;
		position: relative;
		right: 6px;
	}
	.loginBox .loginPanel{
		display: none;
		position: absolute;
		height: 128px;
		width: 228px;
		background-color: #ededed;
		z-index: 11;
		top: 48px;
		right: -82px;
		padding: 16px;
		padding-bottom: 19px;
	}
	.loginBox:hover .loginPanel{
		/*display: block;*/
	}
	.loginPanel input{
		width: 218px;
		height: 24px;
		margin-bottom: 12px;
		padding-left: 8px;
	}
	.loginPanel span{
		font-size: 13px;
		color: #525355;
	}
	.loginPanel input[type="submit"]{
		width: 92px;
		background-position: -243px -13px;
		border: none;
		height: 29px;
		color: #fff;
		margin-bottom: 4px;
	}
	.uptri{
		border-color: transparent transparent #ededed;
		border-style: solid;
		border-width: 0 10px 10px;
		height: 0;
		position: absolute;
		width: 0;
		z-index: 0;
		top: 0;
		display: inline-block;
		position: absolute;
		top: -10px;
		left: 112px;
	}


	.signup_btn{
		border:1px solid #589913; -webkit-border-radius: 3px; -moz-border-radius: 3px;border-radius: 3px;font-size:12px;font-family:arial, helvetica, sans-serif; padding: 4px 7px 3px 7px; text-decoration:none; display:inline-block; color: #FFFFFF;
		background-color: #75CB19; background-image: -webkit-gradient(linear, left top, left bottom, from(#75CB19), to(#B2EE10));
		background-image: -webkit-linear-gradient(top, #75CB19, #B2EE10);
		background-image: -moz-linear-gradient(top, #75CB19, #B2EE10);
		background-image: -ms-linear-gradient(top, #75CB19, #B2EE10);
		background-image: -o-linear-gradient(top, #75CB19, #B2EE10);
		background-image: linear-gradient(to bottom, #75CB19, #B2EE10);filter:progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#75CB19, endColorstr=#B2EE10);

	}

	.signup_btn:hover{
		/*	opacity: .67;
		 border:1px solid #41700e;
		 background-color: #5b9e13; background-image: -webkit-gradient(linear, left top, left bottom, from(#5b9e13), to(#8ebe0d));
		 background-image: -webkit-linear-gradient(top, #5b9e13, #8ebe0d);
		 background-image: -moz-linear-gradient(top, #5b9e13, #8ebe0d);
		 background-image: -ms-linear-gradient(top, #5b9e13, #8ebe0d);
		 background-image: -o-linear-gradient(top, #5b9e13, #8ebe0d);
		 background-image: linear-gradient(to bottom, #5b9e13, #8ebe0d);filter:progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#5b9e13, endColorstr=#8ebe0d); */
		opacity: .67;

	}
</style>
<div class="header">
	<div class="headerCt">
		<a href="/"><span class="tosLogo floatLeft spriteIcon"></span></a>

		<ul class="floatRight menuItems">
			<li class="item <%=params[:action] == "clinic" ? "selected" : ""%>"><a href="/clinic"><%= t "header.clinic" %></a></li>
			<li class="item <%=params[:action] == "academy" ? "selected" : ""%>"><a href="/academy"><%= t "header.academy" %></a></li>
			<li>
				<div class="loginBox">
					<span class="loginText"><%= t "header.login"%></span>
					<span class="spriteIcon downArrow"></span>

					<div class="loginPanel">
						<div class="uptri"></div>
						<form action="/login" method="POST">
							<input type="email" name="username" placeholder="Username"></input>
							<input type="password" name="password" placeholder="Password"></input>
							<input class="spriteIcon" type="submit" value="<%= t "header.login" %>"></input>
							<span><%= t "header.forgotPassword" %></span>
							<span><%= t "header.noAccount" %></span>
							<span class="signup_btn"><%= t "header.signup" %></span>
						</form>
					</div>
				</div>
			</li>
			<li>
				<input type="text" class="search"></input>
				<span class="spriteIcon searchIcon"></span>
			</li>
		</ul>
	</div>
</div>
<script>
	$("body").click(function(){
		$(".loginPanel").css({
			display: 'none'
		});	});
	$(".loginBox").click(function(){
		console.log($(".loginPanel"));
		$(".loginPanel").css({
			display: 'block'
		});
		return false;
	});
</script>