<style>
	.footerBottom .copyright{
		font-family: 'Merriweather';
		font-size: 12px;
		color: #666;
	}
	.footerCt{
		font-family: 'Merriweather';
		font-size: 13pt;
	}

.ftSection ul{

list-style: none;

}

.ftSection li { 
   
    text-indent: -.7em;
}

.ftSection li:before {
    content: '';
    background-color: #666666;
     display: inline-block;
    position: relative;
    height: 8px;
    width: 8px;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    -moz-background-clip: padding;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    margin-right: 8px;
    
}

</style>
<footer>
	<div class="footerCt">
		<div class="footerTop">
			<div class="leftSection">
				<div class="leftTopCt">
					<div class="clinicSection ftSection">
						<h3><%= t "footer.clinic" %></h3>
						<ul>
							<!--<li><a href=""><%= t "footer.about" %></a></li>-->
							<li><a href=""><%= t "footer.edge" %></a></li>
							<li><a href=""><%= t "footer.kcenter" %></a></li>
							<!--<li><a href=""><%= t "footer.ginformation" %></a></li>-->
							<li><a href=""><%= t "footer.events" %></a></li>
							<li><a href=""><%= t "footer.contactUs" %></a></li>
						</ul>
					</div>
					<div class="academySection ftSection">
						<h3><%= t "footer.academy" %></h3>
						<ul>
							<!--<li><a href="/clinic/about-us"><%= t "footer.about" %></a></li>-->
							<li><a href=""><%= t "footer.edge" %></a></li>
							<li><a href=""><%= t "footer.kcenter" %></a></li>
							<li><a href=""><%= t "footer.cources" %></a></li>
							<li><a href=""><%= t "footer.admissions" %></a></li>
							<!--<li><a href=""><%= t "footer.satellitecenter" %></a></li>-->							
							<li><a href=""><%= t "footer.contactUs" %></a></li>
						</ul>
					</div>
					<div class="linksSection">
						<h3><a href=""><%=  t "footer.links"%></a></h3>						
					</div>
					<div class="clear"></div>
				</div>
				<div class="socialLinks">
					<span style="font-size: 8pt; color: #3e3e3e;"><%= t "footer.getsocial" %>:</span>
					<!--<a href=""><span class="spriteIcon smlIcon mail" title ="email"></span></a>-->
					<a href=""><span class="spriteIcon smlIcon twitter" title ="twitter"></span></a>
					<a href=""><span class="spriteIcon smlIcon facebook" title ="facebook"></span></a>
					<a href=""><span class="spriteIcon smlIcon linkedin" title ="linkedin"></span></a>
				</div>
			</div>
			<div class="rightSection">
				<h3><%= t "footer.givefeedback" %></h3>
				<form action="/submit-feedback" method="POST">
					<table>
						<tr>
							<td>
								<input type="text" name="name" size="50" placeholder="<%= t "footer.name" %>"></input>
							</td>
						</tr>
						<tr>
							<td>
								<input type="email" name="email" size="50" placeholder="<%= t "footer.email" %>"></input>
							</td>
						</tr>
						<tr>
							<td>
								<textarea name="feedback" rows="5" cols="37" placeholder="<%=  t "footer.feedback" %>"></textarea>
							</td>
						</tr>
						<tr><td><input type="submit" class="spriteIcon" value="<%= t "footer.send" %>"></input></td></tr>
					</table>
				</form>
			</div>
			<div class="clear"></div>
		</div>

		<div class="footerBottom">
			<span class="copyright floatLeft tisapro"> &copy;  2013, The Other Song</span>
		</div>
	</div>
</footer>
