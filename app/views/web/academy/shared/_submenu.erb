<style>	
	.submenu{
		height: 42px;
		border-top: 1px solid #525355;
		background-image: -moz-linear-gradient(center top,#787878,#424242);
		background-image: -webkit-linear-gradient(#787878,#424242);
		background-color: #454648;
		-moz-box-shadow: 0 1px 3px rgba(0,0,0,.3);
		-webkit-box-shadow: 0 1px 3px rgba(0,0,0,.3);
		box-shadow: 0 1px 3px rgba(0,0,0,.3);
		background-image: url("/images/submenu-bg.jpg");
		margin-bottom: 35px;
	}
	.submenuItems{
		width: 980px;
		margin: auto;
		position: relative;
	}
	.submenuItem{
		/*position: relative;*/
	}
	.submenuItem ul{
		display: none;
		position: absolute;
		width: 980px;
		left: 2px;
		top: 42px;
		/*border-right: 1px solid #ddd;*/
		z-index: 1;
	}
	.submenuItem ul li{
		background-color: #ededed;
		display: inline-block;
	}
	.submenuItem ul li a{
		color: #333;
		font-size: 16px;
	}
	.submenuItem ul li a:hover{
		text-decoration: underline;
	}
	li.selected ul{
		display: block;
	}
	.submenuItems li a{
		color: #ddd;
		/*font-size: 15.5pt;
		line-height: 32pt;*/
	}
	.submenuItem li{
		height: 38px;
	}
	.submenuItems li{
		float: left;

		padding: 0 10px;
		font-size: 16px;
		height: 42px;
		line-height: 40px;
	}
	.submenuItems li.selected{
		background-color: #ededed;

		cursor: pointer;
	}
	.submenuItems li.selected div > a{
		color: #000;
		font-weight: bold;
	}
	.left-border-1.left-border{
		top: 0px;
		height: 42px;
		position: relative;
		float: left;
		margin-left: -10px;
	}
	.left-border{
		background-image: url("/images/left-border.jpg");
    height: 36px;
    left: 0;
    position: absolute;
    top: 42px;
    width: 6px;
    z-index: 100;
		display: none;
	}
	.selected .left-border{
		display: block;
	}
	.submenuItem ul li{
		-moz-box-shadow: 2px 2px 2px rgba(0,0,0,0.3);
		-webkit-box-shadow: 2px 2px 2px rgba(0,0,0,0.3);
		box-shadow: 2px 2px 2px rgba(0,0,0,0.3);
		height: 36px;
	}
	.subnavIcon{
		background-image: url("/images/subnav-icon.jpg");
		display: inline-block;
		height: 16px;
		width: 16px;
		position: relative;
		top: 3px;
		left: 3px;
	}

	.blockQuote{
		border-left: 4px solid #dd0017;
		padding-left: 22px;
		font-size: 22px;
		margin: 20px 0;
	}
</style>
