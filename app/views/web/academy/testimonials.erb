<%= render :partial => "/static/shared/home_image_slide", :locals => {:scope => "clinic"} %>
<%= render :partial => "/web/clinic/shared/submenu", :locals => {:scope => "clinic"} %>
<div class="contentWrap">
	<div class="padder">
		<h2 class="title"><%= t "submenu.edgeSection.testimonial"%> </h2>
		<div class="aboutCt">
			<%@testimonials.each do |testimonial|%>
				<div class="article blockQuote" style="height: 140px;">
					<div class="floatLeft testimonialVideoCt"><iframe width="200" height="140" src="<%=testimonial.testimonial_video%>" frameborder="0" ></iframe></div>
					<div class="floatRight contentBlock" style="width: 720px;">
						<h3 class="subheader floatLeft">Testimonial By <%=testimonial.testimonial_by%></h3>
						<span class="links floatRight"><%=testimonial.created_at.strftime("%d %b %Y")%></span>
						<div class="clear"></div>
						<div class="bodyContent "><%=truncate(testimonial.description,:length=>300)%></div>
					</div>
					<div class="clear"></div>
				</div>

			<%end%>



			
		</div>
	</div>
</div>

