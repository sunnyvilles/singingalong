<style>
	.sharingTool{
		background-image: url("/images/share-icon.jpg");
	}
	.submenu{
		margin-bottom: 0;
	}
	.submenuItem ul{
		border-right: 1px solid #ddd;
		left: 0 !important;
	}
	.bottomBar{
		border-bottom: none;
		border-top: 1px solid #666;
		padding-top: 14px;
		height: 20px;
	}
	.article-list .padder{
		padding: 20px 10px;
	}
	.article-list .contentBlock{
		width: 740px;
	}
	.article-list .contentBlock .bodyContent{
		height: 78px;
	}
</style>
<%page_no = params[:page].to_i == 0 ? 1 : params[:page].to_i%>

<%= render :partial => "/static/shared/home_image_slide", :locals => {:scope => "clinic"} %>
<%= render :partial => "/web/clinic/shared/submenu", :locals => {:scope => "clinic"} %>
<div class="contentWrap article-list">
	<div class="padder">
		<h2 class="title"><%= t "submenu.events"%> </h2>		
		<div>
			<div class="topHeader">
				<%if page_no !=1%>
					<a href="/clinic/articles?page=<%=page_no.to_i-1%>"><span class="floatLeft spriteIcon pagination">&laquo; Previous</span></a>
				<%end%>
				<span class="articleCount subheader">Events Found: <%=@total_events%></span>
				<%if @total_events_remain > 10%>
					<a href="/clinic/articles?page=<%=page_no.to_i+1%>"><span class="floatRight spriteIcon pagination next">Next &raquo;</span></a>
				<%end%>
			</div>
			<div class="articlesList">
				<%@events.each { |event|%>					
					<%#img_url = event[:file_caption_0].present? ? "/images/articles/#{article[:id]}-0.jpg" : "/images/articles/default.jpg"%>
					<%img_url = "/images/events/default.jpg"%>
					<div class="article">

						<img src="<%=img_url%>" height="140" width="200" class="floatLeft" alt=""/>
						<div class="floatRight contentBlock">
							<h3 class="subheader floatLeft"><%=event[:title]%></h3>
							<span class="subheader floatRight"><%=event[:day].strftime('%B %d, %Y')%></span>
							<div class="clear"></div>
							<div class="bodyContent"><%=raw event[:description][0...240]%>...</div>
							<div class="tools">
								<span class="sharingTool"></span>
								<a class="links floatRight" href="/clinic/events/<%=event[:id]%>">Read More</a>
							</div>
						</div>
						<div class="clear"></div>
					</div>
				<% } %>
			</div>
			<div class="bottomBar">
				<%if page_no !=1%>
					<a href="/clinic/articles?page=<%=page_no.to_i-1%>"><span class="floatLeft spriteIcon pagination">&laquo; Previous</span></a>
				<%end%>
				<span class="articleCount">Events Found: <%=@total_events.size%></span>
				<%if @total_events_remain > 10%>
					<a href="/clinic/articles?page=<%=page_no.to_i+1%>"><span class="floatRight spriteIcon pagination next">Next &raquo;</span></a>
				<%end%>
			</div>
		</div>

		<div class="clear"></div>
	</div>
</div>