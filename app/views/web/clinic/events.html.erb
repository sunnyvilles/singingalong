<style type="text/css">
	.submenu{
		margin-bottom: 0 !important;
	}
</style>
<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<%= render :partial => "/static/shared/home_image_slide", :locals => {:scope => "clinic"} %>
<%= render :partial => "/web/clinic/shared/submenu", :locals => {:scope => "clinic"} %>
<div class="contentWrap">
	<h2 class="title">EVENTS</h2>
	<div class="padder">
		<div id="accordion" class="greenAccordianHeader">
			<h3>WORKSHOPS</h3>
			<div>
				<%@eventsHash["workshops"].each{|event|%>
					<div class="eventDesc">
						<div class="dateBlock floatLeft">
							<div class="dateCt">Jul 10</div>
							<div class="dayCt">Wed.</div>
						</div>
						<div class="floatLeft" style="width: 800px;">
							<div class="secondryTitle" style="margin-top: 0;"><%=event[:title]%></div>
							<div class="eventDescBlk">
								<div><%=raw event[:other_description]%></div>
								<div class="font18 marginTop20">WORKSHOP DETAILS:</div>
								<div class="marginTop10"><%=raw event[:description]%></div>

								<div class="marginTop20">
									<table class="event-details">
										<%if event[:fees].present?%>
											<tr>
												<td>Course&nbsp;fees: </td>
												<td class="secondCol"><%=event[:fees]%></td>
											</tr>
										<%end%>
										<tr>
											<td>Date:</td>
											<td class="secondCol"><%=event[:day]%></td>
										</tr>
										<tr>
											<td>Venue:</td>
											<td class="secondCol">‘the other song’ academy, 7th Floor, Peninsula Heights, C.D. Burfiwala Marg lane, Andheri (W), Mumbai 400058.</td>
										</tr>
									</table>
								</div>
								<%if event.testimonials.length != 0 %>
									<div class="font18 marginTop20">COMMENTS FROM PARTICIPANTS OF EARLIER WORKSHOPS: </div>
									<%event.testimonials.each do |testimonial|%>
										<div class="marginTop10"><%=raw testimonial[:title]%></div>
									<%end%>
								<%end%>
							</div>
						</div>
						<div class="clear"></div>
					</div>

				<%}%>
			</div>
			<h3>SEMINARS</h3>
			<div>
				<%@eventsHash["seminars"].each{|event|%>
					<div class="eventDesc">
						<div class="dateBlock floatLeft">
							<div class="dateCt">Jul 10</div>
							<div class="dayCt">Wed.</div>
						</div>
						<div class="floatLeft" style="width: 800px;">
							<div class="secondryTitle" style="margin-top: 0;"><%=event[:title]%></div>
							<div class="eventDescBlk">
								<%=event[:description]%>
							</div>
						</div>
						<div class="clear"></div>
					</div>

				<%}%>
			</div>
			<h3>VISITS</h3>
			<div>
				<%@eventsHash["visits"].each{|event|%>
					<div class="eventDesc">
						<div class="dateBlock floatLeft">
							<div class="dateCt">Jul 10</div>
							<div class="dayCt">Wed.</div>
						</div>
						<div class="floatLeft" style="width: 800px;">
							<div class="secondryTitle" style="margin-top: 0;"><%=event[:title]%></div>
							<div class="eventDescBlk">
								<%=event[:description]%>
							</div>
						</div>
						<div class="clear"></div>
					</div>

				<%}%>
			</div>
			<h3>LECTURES</h3>
			<div>
				<%@eventsHash["lectures"].each{|event|%>
					<div class="eventDesc">
						<div class="dateBlock floatLeft">
							<div class="dateCt">Jul 10</div>
							<div class="dayCt">Wed.</div>
						</div>
						<div class="floatLeft" style="width: 800px;">
							<div class="secondryTitle" style="margin-top: 0;"><%=event[:title]%></div>
							<div class="eventDescBlk">
								<%=event[:description]%>
							</div>
						</div>
						<div class="clear"></div>
					</div>

				<%}%>
			</div>
		</div>
	</div>
</div>
<script>
	$(function() {
		$( "#accordion" ).accordion({
			heightStyle: 'content',
			collapsible: true
		});
	});
</script>