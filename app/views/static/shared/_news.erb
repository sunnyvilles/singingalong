<style>
	.newsCt{
		background-color: #eee;
		height: 324px;
		margin-top: -40px;
	}
	.news{
		width: 960px;
		margin: auto;
		padding: 20px;
		height: 206px;
		position: relative;
	}

	.news ul{
		text-align: left;
		float: none;
		top: 0px;
		right: auto;
		bottom: auto;
		left: 0px;
		margin: 0px;		
		height: 226px;
		margin-left: 28px;
	}
	.newsBlock{
		float: left;
		position: relative;
		margin-right: 28px;
	}
	.newsBlock .type{
		position: absolute;
		top: 40px;
		left: 0;
		padding: 8px;
		color: #fff;
	}
	.newsBlock .type.video{
		background-color: #1b7bb7;
	}
	.newsBlock .type.gallery{
		background-color: #559d15;
	}

	.newsBlock .type.case{
		background-color: #559d15;
	}

	.slideControl{
		position: absolute;
		top: 77px;
		height: 36px;
		width: 20px;
	}
	.slideNavLeft{
		left: -16px;
		background-position: -416px -42px;
	}
	.slideNavRight{
		right: -42px;
		background-position: -380px -42px;
	}
	.sliderCt{
		position: relative;
		top: 42px;
	}

	.caroufredsel_wrapper{
		position: absolute !important;
}
</style>

<div class="newsCt">
	<div class="news">
		<h2 class="title" style="position: absolute;"><%= t "home.latest" %></h2>
		<div class="sliderCt">
			<a id="ui-carousel-prev" href="#" class="spriteIcon slideNavLeft slideControl"></a>
			<a id="ui-carousel-next" href="#" class="spriteIcon slideNavRight slideControl"></a>
			<ul>
				<%newses.each { |news|%>
					<li  class="newsBlock">
						<div>
	<%#if news[:type]== "video"%>
	<%#else%>
							<img src="<%=news[:image]%>" alt="" height="194" width="290"></img>
	<%#end%>
							<div class="type <%=news[:type]%>"><%=news[:type].upcase%></div>
						</div>
					</li>
				<%}%>

			</ul>
		</div>
	</div>
</div>
<script>
	$(function(){
		$(".sliderCt ul").carouFredSel({
        auto  : false,
        items : 3,
        prev  : '#ui-carousel-prev',
        next  : '#ui-carousel-next'
      });
	});
</script>