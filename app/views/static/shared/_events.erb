<style>
	.events{
		float: right;
		width: 310px;
		padding-left: 18px;
		padding-top: 20px;
	}
	h2.title{
		font-size: 24px;
		letter-spacing: 1px;
	}

	.eventBlock{
		margin-top: 22px;
	}
	.dateBlock{
		border: 1px solid #a41819;
		border-radius: 40px;
		height: 64px;
		width: 64px;
		overflow: hidden;
		margin-right: 18px;
	}
	.dateCt, .dayCt{
		height: 32px;
		width: 64px;
		text-align: center;
	}
	.dateCt{
		background-color: #a41819;
		color: #fff;
		padding-top: 14px;
		height: 20px;
	}
	.dayCt{
		padding-top: 5px;
	}
	.eventDesc{
		line-height: 20px;
	}
	.eventDesc h4{
		font-weight: normal;
		color: #666;
	}
	.eventDesc a{
		color: #666;
	}
	.eventDesc a:hover{
		text-decoration: underline;
	}
	.eventDesc a:after{
		content: "\00bb";
		padding-left: 6px;
		position: absolute;
	}
</style>
<h2 class="title"><%= t "home.events" %></h2>
<div class="eventsList">
	<%events.each { |event|%>
		<div class="eventBlock">
			<div class="dateBlock floatLeft">
				<div class="dateCt"><%=event[:date]%></div>
				<div class="dayCt"><%=event[:day]%></div>
			</div>
			<div class="eventDesc floatLeft">
				<h3><%=event[:title]%></h3>
				<h4><%=event[:sub_title]%></h4>
				<a href="<%=event[:link]%>"><%= t "home.readmore" %></a>
			</div>
			<div class="clear"></div>
		</div>

	<%}%>
	<div class="clear"></div>
</div>