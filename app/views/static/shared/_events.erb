<style>
	.events{
		float: right;
		width: 310px;
		padding-left: 18px;
		padding-top: 8px;
	}

	.eventBlock{
		margin-top: 22px;
	}
	
	.eventDesc{
		line-height: 20px;
	}
	.eventDesc h4{
		font-weight: normal;
		color: #666;
	}
	.eventDesc a{
		color: #666;
	}
	.eventDesc a:hover{
		text-decoration: underline;
	}
	.eventDesc a:after{
		content: "\00bb";
		padding-left: 6px;
		position: absolute;
	}
</style>
<h2 class="title highlight"><%= t "home.events" %></h2>
<div class="eventsList">
	<%events.each { |event|%>
		<div class="eventBlock">
				<div class="dateBlock floatLeft">

<div class="dateCt"><%=event[:day].present? ? event[:day].strftime('%b %d') : ""%></div>
<div class="dayCt"><%=event[:day].present? ? event[:day].strftime('%a') : ""%>.</div>
</div>
			<div class="eventDesc floatLeft">
				<h3 class="highlight"><%=event[:title]%></h3>
				<h4><%=event[:sub_title]%></h4>
				<a href="/clinic/events"><%= t "home.readmore" %></a>
			</div>
			<div class="clear"></div>
		</div>

	<%}%>
	<div class="clear"></div>
</div>